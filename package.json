    "url": "git+https://github.com/pablof7z/nostr-explore-mcp.git"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@nostr-dev-kit/ndk": "^3.0.0",
    "nostr-tools": "^2.23.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/node": "^25.3.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ]
