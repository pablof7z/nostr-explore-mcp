{
  "name": "nostr-explore-mcp",
  "version": "0.3.0",
  "description": "MCP server for exploring Nostr protocol data",
  "main": "dist/index.js",
  "bin": {
    "nostr-explore-mcp": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --format esm --minify",
    "dev": "bun run src/index.ts",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "nostr",
    "ndk"
  ],
  "author": "Pablo Fernandez",
  "repository": {
